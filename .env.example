# Freelance Mailer Configuration

# OpenRouter API Key (required)
OPENROUTER_API_KEY=your_openrouter_api_key

# SMTP configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=you@example.com
SMTP_PASSWORD=your_app_password

# Path to your resume PDF
RESUME_PATH=path/to/your/resume.pdf

# Job search settings
JOB_TYPE=software
JOB_CATEGORY=freelance  # or 'normal'
JOB_LIMIT=30

# Email sending mode
SEND_EMAILS=false  # Set to 'true' to actually send emails

# Motivational letter generation
GENERATE_MOTIVATIONAL_LETTER=true

# AI Model
AI_MODEL=nousresearch/hermes-3-llama-3.1-405b:free

# Location and Job Name (optional)
# LOCATION=New York
# JOB_NAME=React Developer

# Google Search API (optional, for enhanced email finding)
GOOGLE_SEARCH_API_KEY=your_google_search_api_key
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id

# Comprehensive Website Scraping Configuration
# These control how deeply the system crawls websites to find emails
CRAWL_DEPTH=2                    # Max depth to crawl (0=homepage only, 1=homepage+direct links, 2=2 levels deep, etc.)
CRAWL_MAX_PAGES=15               # Maximum pages to visit per website
CRAWL_TIMEOUT=5                  # Timeout per page request (seconds)
TOTAL_CRAWL_TIME_LIMIT=60        # Maximum total time for entire website crawl (seconds)

# Retry settings
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_HOURS=1